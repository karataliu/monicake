#!/usr/bin/env perl

use strict;
use warnings;
use feature qw(say);

sub info
{
    my $msg = shift;
    say "[MONICAKE] $msg";
}

info("Begin install Zabbix Agent.");
my $ret = system('DEBIAN_FRONTEND=noninteractive apt-get -y install zabbix-agent');

if (!$ret){
    info("Install succeed.");
}else{
    info("Install failed.");
}
