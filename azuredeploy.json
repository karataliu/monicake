{
  "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "monitorVmName": {
      "type": "string",
      "metadata": {
        "description": "Name for the monitor vm."
      }
    },
    "storageAccount": {
      "type": "string",
      "metadata": {
        "description": "Existing Storage account for storing VM vhd."
      }
    },
    "virtualNetworkName": {
      "type": "string",
      "metadata": {
        "description": "The vnet name the monitor VM connects to."
      }
    },
    "subnetName": {
      "type": "string",
      "metadata": {
        "description": "The subnet name the monitor VM connects to, also agents will also be installed on those VMs."
      },
      "defaultValue": "default"
    },
    "monitorVmUsername": {
      "type": "string",
      "metadata": {
        "description": "Monitor VM user name."
      },
      "defaultValue": "monitoruser"
    },
    "monitorVmPassword": {
      "type": "securestring",
      "metadata": {
        "description": "Monitor VM password."
      }
    },
    "mysqlHost": {
      "type": "string",
      "metadata": {
        "description": "Monitoring service backend MySQL host. Using 'localhost' here will set up a new MySQL instance on the monitor VM."
      },
      "defaultValue": "localhost"
    },
    "mysqlDbName": {
      "type": "string",
      "metadata": {
        "description": "Monitoring service backend MySQL database name."
      },
      "defaultValue": "zabbixdb"
    },
    "mysqlUser": {
      "type": "string",
      "metadata": {
        "description": "Monitoring service backend MySQL user name."
      },
      "defaultValue": "zabbixuser"
    },
    "mysqlPassword": {
      "type": "securestring",
      "metadata": {
        "description": "Monitoring service backend MySQL password."
      }
    },
    "_artifactsLocation": {
      "type": "string",
      "metadata": {
        "description": "The base URI where artifacts required by this template are located. When the template is deployed using the accompanying scripts, a private location in the subscription will be used and this value will be automatically generated."
      },
      "defaultValue": "https://raw.githubusercontent.com/karataliu/monicake/master"
    }
  },
  "variables": {},
  "resources": [
    {
      "apiVersion": "2015-01-01",
      "name": "configMonitoringServerVM",
      "type": "Microsoft.Resources/deployments",
      "properties": {
        "mode": "Incremental",
        "templateLink": {
          "uri": "[concat(parameters('_artifactsLocation'), '/nested/monitoringServer.json')]",
          "contentVersion": "1.0.0.0"
        },
        "parameters": {
          "monitorVmName": {
            "value": "[parameters('monitorVmName')]"
          },
          "storageAccount": {
            "value": "[parameters('storageAccount')]"
          },
          "virtualNetworkName": {
            "value": "[parameters('virtualNetworkName')]"
          },
          "subnetName": {
            "value": "[parameters('subnetName')]"
          },
          "adminUsername": {
            "value": "[parameters('monitorVmUsername')]"
          },
          "adminPassword": {
            "value": "[parameters('monitorVmPassword')]"
          },
          "mysqlHost": {
            "value": "[parameters('mysqlHost')]"
          },
          "mysqlDbName": {
            "value": "[parameters('mysqlDbName')]"
          },
          "mysqlUser": {
            "value": "[parameters('mysqlUser')]"
          },
          "mysqlPassword": {
            "value": "[parameters('mysqlPassword')]"
          },
          "_artifactsLocation": {
            "value": "[parameters('_artifactsLocation')]"
          }
        }
      }
    },
    {
      "apiVersion": "2015-01-01",
      "name": "configMonitoringAgentByVnet",
      "type": "Microsoft.Resources/deployments",
      "dependsOn": [
        "configMonitoringServerVM"
      ],
      "properties": {
        "mode": "Incremental",
        "templateLink": {
          "uri": "[concat(parameters('_artifactsLocation'), '/nested/monitoringAgentByVnet.json')]",
          "contentVersion": "1.0.0.0"
        },
        "parameters": {
          "virtualNetworkName": {
            "value": "[parameters('virtualNetworkName')]"
          },
          "subnetName": {
            "value": "[parameters('subnetName')]"
          },
          "serverIp": {
            "value": "[reference('configMonitoringServerVM').outputs.serverInternalIp.value]"
          },
          "_artifactsLocation": {
            "value": "[parameters('_artifactsLocation')]"
          }
        }
      }
    }
  ],
  "outputs": {
    "serverPublicEndpoint": {
      "type": "string",
      "value": "[reference('configMonitoringServerVM').outputs.serverPublicEndpoint.value]"
    }
  }
}