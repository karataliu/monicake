{
  "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "monitorVmName": {
      "type": "string",
      "metadata": {
        "description": "Name for the monitor vm."
      }
    },
    "storageAccount": {
      "type": "string",
      "metadata": {
        "description": "Existing Storage account for storing VM vhd."
      }
    },
    "virtualNetworkName":{
      "type": "string",
      "metadata": {
        "description": "The vnet name VMs connected to."
      }
    },
    "subnetName":{
      "type": "string",
      "metadata": {
        "description": "The subnet name VMs connected to."
      },
      "defaultValue": "default"
    },
    "username":{
      "type": "string",
      "metadata": {
        "description": "Monitor VM user name."
      },
      "defaultValue": "monitoruser"
    },
    "password":{
      "type": "securestring",
      "metadata": {
        "description": "Monitor VM password."
      }
    },
    "mysqlDbName":{
      "type": "string",
      "metadata": {
        "description": "Backend MySQL database name."
      },
      "defaultValue": "zabbixdb"
    },
    "mysqlUser":{
      "type": "string",
      "metadata": {
        "description": "Backend MySQL user name."
      },
      "defaultValue": "zabbixuser"
    },
    "mysqlPassword":{
      "type": "securestring",
      "metadata": {
        "description": "Backend MySQL password."
      }
    }
  },
  "variables": {},
  "resources": [
    {
     "apiVersion": "2015-01-01",
     "name": "configMonitoringServerVM",
     "type": "Microsoft.Resources/deployments",
     "properties": { 
       "mode": "Incremental", 
       "templateLink": {
          "uri": "https://raw.githubusercontent.com/karataliu/monicake/master/azuredeployMonitoringServer.json",
          "contentVersion": "1.0.0.0"
       }, 
       "parameters": { 
          "monitorVmName":      {"value": "[parameters('monitorVmName')]"},
          "storageAccount":     {"value": "[parameters('storageAccount')]"},
          "virtualNetworkName": {"value": "[parameters('virtualNetworkName')]"},
          "subnetName":         {"value": "[parameters('subnetName')]"},
          "username":           {"value": "[parameters('username')]"},
          "password":           {"value": "[parameters('password')]"},
          "mysqlDbName":        {"value": "[parameters('mysqlDbName')]"},
          "mysqlUser":          {"value": "[parameters('mysqlUser')]"},
          "mysqlPassword":      {"value": "[parameters('mysqlPassword')]"}
       }
     }
    },
    {
     "apiVersion": "2015-01-01", 
     "name": "configMonitoringAgentByVnet", 
     "type": "Microsoft.Resources/deployments",
     "dependsOn": [
        "configMonitoringServerVM"
      ],
     "properties": { 
       "mode": "Incremental", 
       "templateLink": {
          "uri": "https://raw.githubusercontent.com/karataliu/monicake/master/azuredeployMonitoringAgentByVnet.json",
          "contentVersion": "1.0.0.0"
       }, 
       "parameters": { 
          "virtualNetworkName":{"value": "[parameters('virtualNetworkName')]"},
          "subnetName":{"value": "[parameters('subnetName')]"},
          "serverIp": {"value": "[reference('configMonitoringServerVM').outputs.serverInternalIp.value]"}
       } 
     } 
    }
  ],
  "outputs": {
    "serverPublicEndpoint":{
      "type": "string",
      "value": "[reference('configMonitoringServerVM').outputs.serverPublicEndpoint.value]"
    }
  }
}


