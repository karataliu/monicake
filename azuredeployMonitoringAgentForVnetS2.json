{
  "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "ipConfigurations": {
      "type": "array",
      "metadata": {
        "description": "ipConfigurations info."
      }
    },
    "serverIp":{
        "type": "string",
        "metadata": {
          "description": "server ip."
        }
    }
  },
  "variables": {
    "vmidPrefix": "[concat('/subscriptions/',subscription().subscriptionId,'/resourceGroups/',resourceGroup().name,'/providers/Microsoft.Compute/virtualMachines/')]",
    "nics": "[parameters('ipConfigurations')]"
  },
  "resources": [
    {
      "name": "[concat('subdep', copyIndex())]",
      "apiVersion": "2015-01-01",
      "type": "Microsoft.Resources/deployments",
      "copy": {
         "name": "vmCopy",
         "count": "[length(variables('nics'))]"
      },
      "properties": {
       "mode": "Incremental",
       "templateLink": {
          "uri": "https://raw.githubusercontent.com/karataliu/monicake/master/azuredeployMonitoringAgent.json",
          "contentVersion": "1.0.0.0"
       }, 
       "parameters": {
          "vmNames":{"value": ["[replace(reference(concat(variables('nics')[copyIndex()].id, '/../../'), '2016-03-30').virtualMachine.id, variables('vmidPrefix'),'')]"] },
          "serverIp":{"value": "[parameters('serverIp')]"}
       }
      }
    }
  ]
}
